<% layout('layouts/boilerplate') %>
<div class="row justify-content-center">
	<h1 class="text-center">Edit</h1>
	<div class="col-md-6">
		<form
			action="/hostels/<%= hostel._id %>?_method=PUT"
			method="POST"
			novalidate
			class="needs-validation"
			enctype="multipart/form-data"
		>
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					id="title"
					name="hostel[title]"
					value="<%= hostel.title %>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input
					class="form-control"
					type="text"
					id="location"
					name="hostel[location]"
					value="<%= hostel.location %>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Price</label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">$</span>
					<input
						type="text"
						class="form-control"
						id="price"
						placeholder="0.00"
						aria-label="price"
						aria-describedby="price-label"
						name="hostel[price]"
						value="<%= hostel.price %>"
						required
					/>
					<div class="valid-feedback">Looks good!</div>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" id="description" name="hostel[description]" required>
<%= hostel.description %></textarea
				>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="images">Add Images</label>
				<input type="file" class="form-control" id="images" name="image" multiple />
			</div>
			<div class="mb-3">
				<% hostel.images.forEach(function(img, i){ %>
				<div>
					<img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" />
					<div class="ps-2 form-check-inline">
						<label class="form-check-label" for="image-<%= i %>">Delete?</label>
						<input
							class="form-check-input"
							type="checkbox"
							id="image-<%= i %>"
							name="deleteImages[]"
							value="<%= img.filename %>"
						/>
					</div>
				</div>
				<% }) %>
			</div>
			<div class="mb-3">
				<button class="btn btn-info">Update</button>
				<a class="btn btn-secondary" href="/hostels/<%= hostel._id %>">Back</a>
			</div>
		</form>
	</div>
</div>
