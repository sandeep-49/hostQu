<% layout('layouts/boilerplate') %>

<h1>All Hostels</h1>
<div>
    <a href="/hostels/new">Add Hostel</a>
</div>
<% for (let hostel of hostels){ %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= hostel.image %>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= hostel.title %></h5>
                <p class="card-text"><%= hostel.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= hostel.location %></small>
                </p>
                <a class="btn btn-primary" href="/hostels/<%= hostel._id %>">view</a>
            </div>
        </div>
    </div>
</div>
<% } %>